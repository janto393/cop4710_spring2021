{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
		"strictNullChecks": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
		"outDir": "build",
		"baseUrl": "."
  },
  "include": [
    "src/**/*"
  ],
	"exclude": [
		"front-end/**/*"
	]
}
